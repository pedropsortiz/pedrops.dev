---
const allProjects = await Astro.glob('../projects/*.md');
---


{
    allProjects.map((post) => (
      <a target="_blank" href={post.frontmatter.url}>
        <div class="box">
          <div class="titleSubtitle">
            <h3>{post.frontmatter.title}</h3>
            <p><small>{post.frontmatter.subtitle}</small></p>
          </div>
        </div>
  
      </a>
    ))
  }

  <style>
    .box {
      padding: 10px;
      border-radius: 5px;
      border-color: white;
      text-shadow: 2px 2px black;
      background-image: url('https://i.ibb.co/3BfjnTY/imagem-2023-08-29-125930779.png');
    }
  
    #tags {
      font-size: 12px;
    }
  
    .box h3 {
      margin-top: 0px;
      margin-bottom: -30px;
    }
  
    .footer small {
      color: #919191;
    }
  
    a {
      color: inherit;
      text-decoration: none;
    }
  </style>